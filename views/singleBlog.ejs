<%- include('components/blogboiler') %>
<body>
    <%- include('components/navbar') %>
    <div class="card">
        <h2 class="card-title"><%- blog[0].title %></h2>
        <h3 class="card-subtitle"><%- blog[0].subTitle %></h3>
        <p class="card-description"><%- blog[0].description%></p>
        <footer>
            <p> 
                Published Date: <%- blog[0].createdAt.toISOString().slice(0,10) %>
            </p>
            <button><a href="/delete/<%- blog[0].id %>"> Delete </a></button>
            <button><a href="/edit/<%- blog[0].id %>"> Edit </a></button>
        </footer>
    </div>
    
</body>
</html>
