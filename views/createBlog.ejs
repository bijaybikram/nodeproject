<%- include('components/editboiler') %>
<body>
    <header>
        <h1>Create a Blog</h1>
    </header>

    <div class="container">
        <h2>Submit Your Information</h2>
        <form class="blog-form" action="/createblog" method="post">
            <label for="title">Blog Title:</label>
            <input type="text" id="title" name="title" placeholder="Enter your blog title" required>

            <label for="subtitle">Blog Subtitle:</label>
            <input type="text" id="subtitle" name="subtitle" placeholder="Enter your blog subtitle" required>

            <label for="description">Description:</label>
            <textarea id="description" name="description" placeholder="Write your blog description" rows="6" required></textarea>

            <button type="submit">Publish</button>
        </form>
    </div>

    <footer>
        <p>&copy; 2023 Your Blog</p>
    </footer>
</body>
</html>
